PRODUCT OF DIGITS HACKERRANK



#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {


      int n, rem, prod = 1;
 
     
      scanf("%d", &n);
           
      while(n >=1)
      {
           rem = n%10;
           n = n / 10;
          if(rem!=0){
          prod=prod*rem;
    }
      
    else{
        prod=prod*rem+1;
    
    }
      }

  
    printf("%d", prod);
 
      return 0;
}
