PRINT PATTERNS 1 HACKERRANK

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  int n;
    scanf("%d",&n);
    for(int i=n;i>=1;i--){
        
        for(int k=i;k<=n-1;k++){
            printf(" ");
        }
        
        for(int j=1;j<=i;j++){
            printf("*");
    }
    
    printf("\n");
    }
    
    return 0;
}
