PRINTING PATTERN2 HACKERRANK

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int n;
    scanf("%d",&n);
    for(int row=1;row<=n;row++){
        for(int col=1;col<=row+(row-1);col++){
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
        
   
