PATTER PROGRAM 2

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {


    int i, j, N;
    scanf("%d", &N);
   for(i=1; i<=N; i++)
    {
        for(j=1; j<=N; j++)
        {
            if(j==i || (j==N- i+1))
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }

        printf("\n");
    }

    return 0;
}
